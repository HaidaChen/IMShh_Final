	"item-table": {
		"border-type": "",
		"border-weight": "",
		"border-color": "",
		"total": true,
		"total-label": "合计金额：",
		"total-column": "amount",
		"total-name": "totalAmount",
		"columns": [{
				"name": "number",
				"type": "row-no",
				"label": "编号",
				"length": "5%"
			},{
				"name": "product.id",
				"type": "modal-ref",
				"hide": true,
				"data-ref": "product",
				"ref-field": "id"
			},{
				"name": "product.name",
				"type": "modal-ref",
				"ref-tigger": true,
				"ref-modal-id": "pdt_ref",
				"ref-modal-url": "fragment/pdt_ref.html",
				"ref-modal-title": "选择成品",
				"ref-modal-style": "width: 800px",
				"label": "品名",
				"length": "20%",
				"data-ref": "product",
				"ref-field": "name"
			},
			{
				"name": "model",
				"type": "modal-ref",
				"label": "含量",
				"length": "10%",
				"data-ref": "product",
				"ref-field": "model"
			},
			{
				"name": "quantity",
				"type": "text",
				"data-type": "float",
				"label": "数量",
				"length": "10%"
			},
			{
				"name": "unit",
				"type": "modal-ref",
				"label": "单位",
				"length": "5%",
				"data-ref": "product",
				"ref-field": "unit"
			},
			{
				"name": "price",
				"type": "text",
				"data-type": "float",
				"label": "单价",
				"length": "10%"
			},
			{
				"name": "amount",
				"type": "calculation",
				"data-type": "counter",
				"label": "金额",
				"length": "10%",
				"formula": "[quantity]*[price]"
			},
			{
				"name": "remark",
				"type": "text",
				"label": "附注",
				"length": "30%"
			}
		]		
	},
